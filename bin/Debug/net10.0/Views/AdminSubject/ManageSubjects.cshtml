@model IEnumerable<AdamsScienceHub.Models.Subject>
@{
    ViewData["Title"] = "Manage Subjects";
}

<div class="admin-container">
    <div class="admin-greeting mb-4">
        <h2>Manage Subjects</h2>

        <!-- ADD BACK BUTTON HERE -->
        <a asp-controller="Home" asp-action="AdminDashboard" class="btn btn-secondary mb-3">
            ← Back to Dashboard
        </a>

        <p>List of subjects. Add, edit, or delete a subject.</p>
    </div>

    <div class="mb-3">
        <a class="btn btn-add" asp-controller="AdminSubject" asp-action="Create" style="font-size: 12px;">Add New Subject</a>
    </div>


    @if (!Model.Any())
    {
        <p class="text-center mt-4" style="color:#b0c4de;">No subjects available.</p>
    }
    else
    {
        <div class="table-responsive">
        <table class="admin-table">
            <thead>
                <tr>
                    <th>Preview</th>
                    <th>Subject Name</th>
                    <th style="width:160px">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var s in Model)
                {
                    <tr>
                        <td>
                            @if (!string.IsNullOrEmpty(s.ImagePath))
                            {
                                <img src="@s.ImagePath" style="width:72px;height:48px;object-fit:cover;border-radius:6px" alt="@s.SubjectName" />
                            }
                            else
                            {
                                <div style="width:72px;height:48px;border-radius:6px;background:#222;margin:0 auto;"></div>
                            }
                        </td>
                        <td>@s.SubjectName</td>
                        <td>
                            <a class="btn btn-edit" asp-controller="AdminSubject" asp-action="Edit" asp-route-id="@s.SubjectId">Edit</a>

                            <form asp-controller="AdminSubject" asp-action="DeleteConfirmed" method="post" style="display:inline">
                                <input type="hidden" name="id" value="@s.SubjectId" />
                                <button type="submit" class="btn btn-delete" onclick="return confirm('Delete this subject?');">Delete</button>
                                @Html.AntiForgeryToken()
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>

    }
</div>
