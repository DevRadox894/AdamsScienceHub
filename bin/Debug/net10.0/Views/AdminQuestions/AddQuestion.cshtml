@model AdamsScienceHub.Models.Question

<div class="container py-4">

    <a asp-controller="AdminQuestions"
       asp-action="ViewQuestions"
       asp-route-id="@Model.SubjectId"
       class="btn btn-secondary mb-3">← Back</a>

    <h2>Add Question</h2>

    <form method="post">

        <input type="hidden" asp-for="SubjectId" />

        <div class="mb-3">
            <label>Question</label>
            <textarea asp-for="QuestionText" class="form-control"></textarea>
        </div>

        <div class="mb-3">
            <label>Option A</label>
            <input asp-for="OptionA" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Option B</label>
            <input asp-for="OptionB" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Option C</label>
            <input asp-for="OptionC" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Option D</label>
            <input asp-for="OptionD" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Correct Answer</label>
            <select asp-for="CorrectAnswer" class="form-control">
                <option value="A">A</option>
                <option value="B">B</option>
                <option value="C">C</option>
                <option value="D">D</option>
            </select>
        </div>

        <button type="submit" class="btn btn-success">Save</button>
    </form>

</div>
