@{
    ViewData["Title"] = "Add Subject";
}

<div class="admin-container">
    <div class="admin-greeting mb-4">
        <h2>Add Subject</h2>
    </div>

    <form asp-controller="AdminSubject" asp-action="Create" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <label class="form-label">Subject Name</label>
            <input type="text" name="SubjectName" class="form-control" required />
            @Html.ValidationMessage("SubjectName", "", new { @class = "text-danger" })

        </div>

  
        <div class="mb-3">
            <label class="form-label">Image</label>
            <input type="file" name="ImageFile" accept="image/*" class="form-control" required />
            @Html.ValidationMessage("ImageFile", "", new { @class = "text-danger" })
        </div>


        <button type="submit" class="btn btn-add">Create Subject</button>
        <a asp-controller="AdminSubject" asp-action="ManageSubjects" class="btn btn-secondary">Cancel</a>
    </form>
</div>
