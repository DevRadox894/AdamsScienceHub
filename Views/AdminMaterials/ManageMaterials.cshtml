@model IEnumerable<AdamsScienceHub.Models.Material>

@{
    ViewData["Title"] = "Manage Materials";
}

<div class="admin-container">
    <div class="admin-greeting mb-4">
        <h2>Manage Materials</h2>
        <a asp-controller="Home" asp-action="AdminDashboard" class="btn btn-secondary mb-3">
            ← Back to Dashboard
        </a>
        <p>All uploaded topic materials (PDF) — add, edit or delete.</p>
    </div>

    <div class="mb-4 d-flex justify-content-between align-items-center">
        <div class="dashboard-card" style="max-width:220px; padding: 12px 20px;">
            Total Materials: @Model.Count()
        </div>
        <a class="btn btn-add" asp-controller="AdminMaterials" asp-action="Create">Add New Material</a>
    </div>

    <div class="row g-3">
        @if (!Model.Any())
        {
            <p class="text-center mt-4" style="color:#b0c4de;">No materials found.</p>
        }
        else
        {
            @foreach (var m in Model)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="dashboard-card p-3" style="background: #1f1f2a; border: 1px solid #44445a; border-radius: 10px; height: 100%; min-height: 180px; display: flex; flex-direction: column; justify-content: space-between;">
                        <div>
                            <h5 class="fw-bold" style="color: #00f0ff; margin-bottom: 8px;">@m.TopicTitle</h5>
                            <p class="small" style="color: #b0c4de; margin-bottom: 15px;">Subject: @m.Subject?.SubjectName</p>
                        </div>
                        <div class="d-flex gap-2" style="flex-wrap: nowrap; justify-content: space-between;">
                            <a class="btn btn-edit" asp-controller="AdminMaterials" asp-action="Edit" asp-route-id="@m.MaterialId" style="font-size: 12px; padding: 6px 10px;">Edit</a>

                            <form asp-controller="AdminMaterials" asp-action="DeleteConfirmed" method="post" onsubmit="return confirm('Delete this material?');" style="flex: 1; margin: 0;">
                                <input type="hidden" name="id" value="@m.MaterialId" />
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-delete" style="width: 100%; font-size: 12px; padding: 6px 10px;">Delete</button>
                            </form>

                            <a class="btn" href="@m.FilePath" target="_blank" style="flex: 1; font-size: 12px; padding: 6px 10px; background-color: #00f0ff; color: #071021; border: none; border-radius: 6px; text-decoration: none; text-align: center;">
                                Open PDF
                            </a>
                      
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>